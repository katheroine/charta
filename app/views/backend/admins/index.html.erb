<h1>Listing admins</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>Hashed password</th>
    <th>Salt</th>
    <th>Is root</th>
    <th>Name</th>
    <th>Surname</th>
    <th>Bio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admins.each do |admin| %>
  <tr>
    <td><%= admin.login %></td>
    <td><%= admin.email %></td>
    <td><%= admin.hashed_password %></td>
    <td><%= admin.salt %></td>
    <td><%= admin.is_root %></td>
    <td><%= admin.name %></td>
    <td><%= admin.surname %></td>
    <td><%= admin.bio %></td>
    <td><%= link_to 'Show', admin_admin_path(admin) %></td>
    <td><%= link_to 'Edit', edit_admin_admin_path(admin) %></td>
    <td><%= link_to 'Destroy', admin_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

