<div id="header">
	<h1>Sign in</h1>
</div>

<% if notice then %>
<div id="notice" class="element">
	<%= notice %>
</div>
<% end %>

<%= form_tag '/admin/authenticate', :class => "presentation" do %>
	<div class="element_field">
		<%= label_tag :login, "Login", :class => "name" %><%= text_field_tag :login, nil, :class => "content" %>
	</div>
	<div class="element_field">
	  	<%= label_tag :password, "Password", :class => "name" %><%= password_field_tag :password, nil, :class => "content" %>
  </div>
  <div class="controls">
    <%= submit_tag "Sign in", :class => "action" %>
  </div>
<% end %>

